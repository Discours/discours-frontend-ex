{
  "compilerOptions": {
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react",
    "lib": ["es2015", "es2017", "dom"],
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "./@types"],
    "isolatedModules": false, // https://github.com/microsoft/TypeScript/issues/32294
    "target": "es5",
    "module": "esnext"
  },
  "include": ["src/**/*", "__tests__/**/*", "__utils__/**/*"]
}
